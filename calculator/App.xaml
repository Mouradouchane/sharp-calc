<Application x:Class="calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:calculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <SolidColorBrush x:Key="MainWindowBackgroudColor" Color="Black" />
            <SolidColorBrush x:Key="OperatorsButtonsColor" Color="cyan" />
            <SolidColorBrush x:Key="ValuesButtonsColor" Color="pink" />
            <SolidColorBrush x:Key="FunctionsButtonsColor" Color="OrangeRed" />

            <GridLength x:Key="RowSize">50</GridLength>
            <GridLength x:Key="ColumnSize">100</GridLength>

            <System:Double x:Key="NumbersButtonsFontSize">20</System:Double>
            <System:Double x:Key="NumbersButtonsWidth">80</System:Double>
            <System:Double x:Key="EdgeButtonsWidth">60</System:Double>
            <FontFamily x:Key="NumbersButtonsFontFamily">Segoe UI</FontFamily>


            <System:Char x:Key="BracketOpenChar">{</System:Char>
            
        </ResourceDictionary>

    </Application.Resources>
</Application>
